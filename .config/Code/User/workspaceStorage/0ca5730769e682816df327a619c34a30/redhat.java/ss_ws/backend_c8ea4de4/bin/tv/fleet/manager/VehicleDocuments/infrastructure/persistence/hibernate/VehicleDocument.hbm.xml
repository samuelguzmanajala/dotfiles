<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="tv.fleet.manager.VehicleDocuments.domain.VehicleDocument" table="vehicle_documents">

        <composite-id name="vehicleDocumentId" class="tv.fleet.manager.VehicleDocuments.domain.VehicleDocumentId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>

        <component name="vehicleId" class="tv.fleet.manager.vehicles.domain.VehicleId" access="field">
            <property column="vehicle_id" name="value" type="string" length="36" access="field" />
        </component>

        <component name="documentName" class="tv.fleet.manager.VehicleDocuments.domain.DocumentName" access="field">
            <property name="value" column="name" type="string" access="field" />
        </component>

        <component name="documentType" class="tv.fleet.manager.VehicleDocuments.domain.DocumentType" access="field">
            <property name="value" column="type" type="string" access="field" />
        </component>

        <component name="documentContent" class="tv.fleet.manager.VehicleDocuments.domain.DocumentContent" access="field">
            <property name="value" column="content" type="byte[]" access="field" />
        </component>
    </class>
</hibernate-mapping>